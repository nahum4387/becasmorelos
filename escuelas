<body>

  <div class="contenedor">
    <h2>BUSCAR POR CCT</h2>

    <label for="cupoInput">CCT:</label>
    <input type="text" id="cupoInput" placeholder="Ingresa la CCT" aria-label="Campo para ingresar CCT">
    <button id="buscarBtn" onclick="buscar()">Buscar</button>

    <div id="resultado"></div>
  </div>

  <script>
    function buscar() {
      const cupoInput = document.getElementById("cupoInput");
      const cupo = cupoInput.value.trim().toUpperCase(); // Fuerza a mayúsculas
      cupoInput.value = cupo; // Actualiza visualmente también
      const resultado = document.getElementById("resultado");

      if (!cupo) {
        alert("Por favor, ingresa un CCT.");
        return;
      }

      resultado.innerHTML = "<p>Buscando información...</p>";

      const url = `https://script.google.com/macros/s/AKfycbx5bcmMM2KqstiaqbepBq_XE5nbrP8U1TILMaXR48TzYoiXrSSl4bhrymToPpWPbDmNmA/exec?cupo=${cupo}`;

      fetch(url)
        .then(res => res.json())
        .then(data => {
          if (data.error) {
            resultado.innerHTML = `<p style="color:red;">${data.error}</p>`;
          } else {
            const claseFila = data.nivel && data.nivel.toUpperCase() === "ATENDIDA" ? "fila-verde" : "fila-roja";
            resultado.innerHTML = `
              <table>
                <thead>
                  <tr>
                    <th>CCT</th>
                    <th>Nombre Escuela</th>
                    <th>Municipio</th>
                    <th>Estatus</th>
                    <th>Ubicacion</th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="${claseFila}">
                    <td>${data.cupo}</td>
                    <td>${data.nombre}</td>
                    <td>${data.puesto}</td>
                    <td>${data.nivel}</td>
                    <td><a href="${data.total}" target="_blank" rel="noopener noreferrer">Ver en Maps</a></td>
                  </tr>
                </tbody>
              </table>
            `;
          }
        })
        .catch(err => {
          console.error(err);
          resultado.innerHTML = "<p style='color:red;'>Error al conectar con el servidor.</p>";
        });
    }

    document.getElementById("cupoInput").addEventListener("keydown", function(e) {
      if (e.key === "Enter") {
        document.getElementById("buscarBtn").click();
      }
    });

    // Forzar mayúsculas mientras el usuario escribe (valor real, no solo visual)
    document.getElementById("cupoInput").addEventListener("input", function(e) {
      e.target.value = e.target.value.toUpperCase();
    });
  </script>

</body>
